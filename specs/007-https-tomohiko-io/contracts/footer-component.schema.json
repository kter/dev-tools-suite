{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Footer Component Contract",
  "description": "Contract defining the footer component structure and behavior for all DevTools",
  "type": "object",
  "properties": {
    "footerElement": {
      "type": "object",
      "description": "Footer DOM element specifications",
      "properties": {
        "tagName": {
          "type": "string",
          "const": "footer",
          "description": "Must be semantic footer element"
        },
        "className": {
          "type": "string",
          "pattern": "^.*mt-20.*text-center.*text-gray-500.*dark:text-gray-400.*$",
          "description": "Must include consistent spacing and text styling"
        },
        "children": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "$ref": "#/definitions/paragraphElement"
          }
        }
      },
      "required": ["tagName", "className", "children"]
    },
    "copyrightText": {
      "type": "string",
      "const": "© 2025 DevTools. Built with Nuxt 3 and deployed on AWS.",
      "description": "Exact copyright text required"
    },
    "legalDisclosureLink": {
      "type": "object",
      "description": "Legal disclosure link specifications",
      "properties": {
        "href": {
          "type": "string",
          "const": "https://www.tomohiko.io/legal-disclosure",
          "description": "Exact URL for legal disclosure"
        },
        "target": {
          "type": "string",
          "const": "_blank",
          "description": "Must open in new tab"
        },
        "rel": {
          "type": "string",
          "const": "noopener noreferrer",
          "description": "Security attributes required"
        },
        "className": {
          "type": "string",
          "pattern": ".*hover:text-gray-700.*dark:hover:text-gray-300.*underline.*transition-colors.*",
          "description": "Must include hover effects and accessibility styling"
        },
        "textContent": {
          "type": "string",
          "const": "特定商取引法に基づく表記",
          "description": "Exact Japanese text required"
        }
      },
      "required": ["href", "target", "rel", "className", "textContent"]
    }
  },
  "required": ["footerElement", "copyrightText", "legalDisclosureLink"],
  "definitions": {
    "paragraphElement": {
      "type": "object",
      "properties": {
        "tagName": {
          "type": "string",
          "const": "p"
        },
        "children": {
          "type": "array",
          "description": "Contains copyright text, separator, and legal link",
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": ["tagName", "children"]
    }
  }
}